@model List<CursoMVC.Models.TableViewModels.UserTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Usuarios</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/User/Add")'" value="Nuevo"/>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Edad</th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Email</td>
                    <td>@oElemento.Edad</td>
                    <td>
                        <input type="button" class="btn btn-danger" value="Eliminar" onclick="jsDelete(@oElemento.Id);"/>
                        <input type="button" class="btn btn-secondary" value="Editar" onclick="document.location.href='@Url.Content("~/User/Edit/" + oElemento.Id)'"/>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(id) {
        url = "@Url.Content("~/User/Delete/")" + "/" + id;
        if (confirm("Estás seguro de eliminarlo??")) {
            $.post(url, function (data) {
                if (data == "1") {
                    document.location.href = "@Url.Content("~/User/")"
                } else {
                    alert("Ocurrió un error")
                }
            })
        }
    }
</script>

